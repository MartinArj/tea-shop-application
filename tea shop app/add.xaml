<Page x:Class="tea_shop_app.add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="add">

    <Grid Background="White">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel Orientation="Horizontal" >
                <TextBlock Height="25" Width="100" Text="prod name: " FontWeight="Bold" FontSize="15" />
                <TextBox Height="25" Width="100" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Height="25" Width="100" Text="prod price:" FontWeight="Bold" FontSize="15" />
                <TextBox Height="25" Width="100"/>
            </StackPanel>
            <Button Content="add" FontWeight="Bold" FontSize="15" Margin="0 20 0 0" />
        </StackPanel>
        
    </Grid>
</Page>
