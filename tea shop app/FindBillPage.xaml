<Page x:Class="tea_shop_app.FindBillPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:convert="clr-namespace:tea_shop_app.convertor"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="FindBillPage" WindowHeight="300">
    <Page.Resources>
        <convert:BooleanToVisibilityConvertor x:Key="BoolToVisible"/>
    </Page.Resources>
        <Grid Background="OldLace" x:Name="findbillgrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBox x:Name="textBoxSearch" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10 10 0 0" TextChanged="TextBoxSearch_TextChanged"/>
            <ListBox x:Name="listBoxItems" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="50" Margin="10 0 0 0" Visibility="{Binding MyProp,Mode=TwoWay, Converter={StaticResource BoolToVisible}}" />
            <TextBox Width="100" Height="100" Text="Hello" Visibility="{Binding Myprop,Mode=TwoWay,Converter={StaticResource BoolToVisible}}"/>
        </StackPanel>
       


    </Grid>
</Page>
