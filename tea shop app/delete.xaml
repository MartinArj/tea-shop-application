            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="old name:" FontWeight="Bold" FontSize="15"/>
                <TextBlock FontWeight="Bold" FontSize="15"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="old name:" FontWeight="Bold" FontSize="15"/>
                <TextBlock FontWeight="Bold" FontSize="15"/>
            </StackPanel>
           
            <Button Content="Delete" FontWeight="Bold" FontSize="15" Margin="0 20 0 0" />
        </StackPanel>
        
    </Grid>
</Page>
